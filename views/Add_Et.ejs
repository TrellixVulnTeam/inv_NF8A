   <div class="row" >
   
  
       
           <div class="card text-black border-success mb-3" style="width: 90rem; margin-left: auto; margin-right: auto;">
            
        <div class="card-header bg-dark"  style="color: white;">Ajouter Le contenu du BL</div>
        <div class="card-body">
            
                <div class="form-group">
                  <div class="row">
                    <div class="col-sm">
                        <label >Chef:</label>
                      
                      </div>
                      <div class="col-sm">
                          <form action="/Add_chef" method="POST">
                            <label >Nom:</label>
                            <input type="text" class="form-control" name="c_nom" >
                          </div>
                          <div class="col-sm">
                            <label >Prenom:</label>
                            <input type="text" class="form-control" name="c_prenom" >
                          </div>
                          <div class="col-sm">
                            <label >email:</label>
                      <input type="email" class="form-control" name="c_email" >
                          </div>
                          <div class="col-sm">
                            <input type="text" class="form-control" name="groupId"  value="<%=group.id%>" hidden>
                          <button type="submit" class="btn btn-default">Submit</button>
                          </form>

                        
                 
                      </div>
                      <div class="col-sm"></div>
                  </div>
                  
                  <div class="row">
                    <div class="col-sm">
                        <label >Membre:</label>
                       
                            <div class="col-sm">
                                <form action="/Add_membre" method="POST">
                                <label >Nom:</label>
                                <input type="text" class="form-control" name="m_nom" >
                              </div>
                              <div class="col-sm">
                                <label >Prenom:</label>
                                <input type="text" class="form-control" name="m_prenom" >
                              </div>
                              <div class="col-sm">
                                <label >email:</label>
                          <input type="email" class="form-control" name="m_email" >
                              </div>
                              <div class="col-sm">
                                <input type="text" class="form-control" name="groupId" value="<%=group.id%>" hidden>
                              <button type="submit" class="btn btn-default">Submit</button>
                              </div>
                        </form>
                       
                      
                      </div>
                   
                      <div class="col-sm">
                          <div class="container">
                              <div class="row">
                                  <div class="col-sm">
                                    <% if(chef!==null) {%>
                                        <% if(chef.etudiant!==null) {%>
                                          chef: <%=chef.etudiant.firstName%><br><%=chef.etudiant.lastName%>
                                          <% }%> 
                                          <% }%> 
                                  </div>
                                  <div class="col-sm">

                                  </div>
                              </div>
                          </div>
                       
                          
                        <div class="outer">

                            <table class="table table-hover bg-light">
                              <thead>
                                <tr>
                                  <th scope="col">#</th>
                                  <th scope="col">Nom</th>
                                  <th scope="col">Prenom</th>
                                  <th scope="col">Email</th>
                                </tr>
                              </thead>
                              <tbody>
                                
                                <% for(var i=0;i< etudiant.length;i++) {%>
                                    <% if(etudiant[i].firstname!=="") {%>
                                        <% var j= etudiant[i].firstName%>  
                                  <tr>
                                    <td><%=i%></td>
                                    <td><%= etudiant[i].firstName%></td>
                                    <td><%= etudiant[i].lastName%></td>
                                    <td><%= etudiant[i].email%></td>
            
                                    <td><button class="btn btn-danger">
                                      <a href="/delete_etu/<%= etudiant[i].id%>" style="color: cornsilk;">
                                        <i class="fa fa-trash"></i></a></td>
                                    <td> <a class="btn btn-success" data-toggle="modal" data-target="#<%=j%>">
                                        <i class="fa fa-edit"></i>
                                      </a>
                                    </td>
                                    
                                  </tr>
                                  <div class="modal fade" id="<%=j%>" role="dialog">
                                    <div class="modal-dialog modal-sm">
                                      <div class="modal-content">
                                        <div class="modal-header">
                                            <div class="container">
                                                <div class="row">
                                                    <div class="col-sm">
                                                        <h5> Etudiant: </h5>
                                                    </div>
                                                    <div class="col-sm-3">
                                                        <h5><%=etudiant[i].firstName%>  </h5>   
                                                    </div>
                                                    <div class="col">
                                                        <h5><%=etudiant[i].lastName%></h5>
                                                    </div>
                                                </div>
                                            </div>
                                          
                                         
                                          <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    </div>
                                        <form action="/Et_Edit" method="POST">
                                        <div class="modal-body">
                                          
                                          <input type="text" name="id" value="<%=etudiant[i].id%>"hidden >
                                          <label>Nom</label>
                                          <input type="text"  class="form-control" name="name">
                                          <label>Prenom</label>
                                          <input type="text"  class="form-control" name="lname">
                                          <label>Email</label>
                                          <input type="text"  class="form-control" name="email">
                                        </div>
                                        <div class="modal-footer">
                                          <button type="submit" class="btn btn-default" >save</button>
                                        </div>
                                      </div>
                                    
                                    </div>
                                  </form>
                                  </div>
                                  <% }%> 
                                  <% }%> 
                                                  
                                                    
                                    
                
                                  
                
                                              </tbody>
                            </table>
                          </div>
                      </div>
                  </div>
                 
                 
                </div>
              
               
                  
                
              </form>
          <h5 class="card-title"></h5>
          <h5 class="card-title"></h5>
          
          
        




          

     




    </div>

  </div>

</div> 
   
        </div>
      </div>
   
      
   </div>      
   
      
              
                
                
