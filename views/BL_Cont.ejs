<body>
   <div class="container" >
   <div class="row" >
    <div class="col-sm">
      <div class="card">
        
        <div class="banner"></div>
        <ul>
          <h5>Numero de Bon:<%=BL.numero%></h5>
          <h5>Date :<%=BL.date%></h5>
  
        </ul>
        <button class="contact" id="main-button">cliquer</button>
       
       
          
          
        <form action="/BL_cont/<%=BL.id%>" method="POST" class="email-form">
                
          <label for="inputState">Type</label>
          <select id="inputState" class="form-control" name='type'>
            <option selected>Choose...</option>
            <% for (var i=0;i< cmp.length;i++){%>
                <% if(cmp[i].name!=="") {%>
            <option style="color: black;"><%= cmp[i].name%></option>
            <%}%>
                   
                    <% }%> 
          </select>
          <label >quantite</label>
          <input type="text" class="form-control" name="quantite">
            
          <button type="submit" class="btn btn-info" >Submit</button>
        </form>
      </div>
      </div>
  
    <di class="col-sm">
      <div class="outer">

        <table class="table table-hover bg-light">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Designation</th>
              <th scope="col">quantite</th>
              <th scope="col">edit</th>
            </tr>
          </thead>
          <tbody>

            <% for(var i=0;i< content.length;i++) {%>
              <% var j= content[i].composant.name%>  
              <tr>
                <td><%=i%></td>
                <td><%= content[i].composant.name%></td>
                <td><%= content[i].cquantity%></td>
                <td><button class="btn btn-danger">
                  <a href="/delete_Con/<%= content[i].id%>" style="color: cornsilk;">
                    <i class="fa fa-trash"></i></a></td>
                <td> <a class="btn btn-success" data-toggle="modal" data-target="#<%=j%>">
                    <i class="fa fa-edit"></i>
                  </a>
                </td>
                
              </tr>
              <div class="modal fade" id="<%=j%>" role="dialog">
                <div class="modal-dialog modal-sm">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5> Edit Quantite :  <%=j%></h5>
                      <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                    <form action="/BL_con_Edit" method="POST">
                    <div class="modal-body">
                      
                      <input type="text" name="id" value="<%=content[i].id %>"hidden >
                      <input type="text"  class="form-control" name="edit">
                    </div>
                    <div class="modal-footer">
                      <button type="submit" class="btn btn-default" >save</button>
                    </div>
                  </div>
                
                </div>
              </form>
              </div>
              <% }%> 

                              
                                
                

              

                          </tbody>
        </table>
      </div>
    </di>
    
    
          
          
            
            
           
          

            
       

   
        </div>
      </div>
   
      
       
   
      
      <script>
        $(document).ready(function()
 {
     $('.contact').click(function (e) 
     {
         $('.card').toggleClass('active');
         $('.banner').toggleClass('active');
         $('.photo').toggleClass('active');
         $('.social-media-banner').toggleClass('active');
         $('.email-form').toggleClass('active');  
         var buttonText = $('button.contact#main-button').text();
         if (buttonText === 'back')
         {
             buttonText = 'cliquer';
             $('button.contact#main-button').text(buttonText);
         }
         else
         {
             buttonText = 'back';
             $('button.contact#main-button').text(buttonText);
         }
     });
 });
 
      </script>         
                 
                 
     </body>
